{ 
   "compilerOptions":{ 
      "target":"es6",
      "jsx":"react",
      "moduleResolution":"node",
      "module":"es6",
      "baseUrl":"src/public",
      "outDir":"dist/",
      "sourceMap":true,
      "pretty":true,
      "listFiles":false,
      "declaration":false,
      "noLib":false,
      "allowJs":true,
      "emitDecoratorMetadata":true,
      "esModuleInterop":true,
      "experimentalDecorators":true,
      "allowUnreachableCode":true,
      "allowUnusedLabels":true,
      "noImplicitAny":true,
      "noImplicitReturns":false,
      "noImplicitUseStrict":false,
      "noEmitHelpers":false
   },
   "include":[ 
      "src/public/**/*"
   ],
   "exclude":[ 
      "dist",
      "node_modules"
   ],
   "compileOnSave":true
}

